<%- include('../partials/header') %>
<table class="box" id="list">
  <thead>
    <tr>
      <th style="border-left: 0px;">Delete</th>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight#</th>
      <th>Departure</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% flight.forEach(function(f) { %>
    <tr>
      <td>
        <form
          action="/flights/<%= f._id %>?_method=DELETE"
          method="POST"
          class="delete-form"
        >
          <button class="delete-btn"type="submit">X</button>
        </form>
      </td>
      <td><%= f.airline %></td>
      <td><%= f.airport %></td>
      <td><%= f.flightNo %></td>
      <td style="color: <%= f.departs < new Date() ? 'red' : 'black' %>"><%= f.departs %></td>
      <td>
        <form
        action="/flights/<%= f._id %>"
        method="GET"
        >
        <button class="details-btn">...</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
